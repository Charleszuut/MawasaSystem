<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MawasaProject.Presentation.Views.Pages.AuditPage"
             Title="Audit"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#E9EDF3">
    <ContentPage.Resources>
        <Color x:Key="SurfaceCard">#FFFFFF</Color>
        <Color x:Key="TextMain">#1F2A37</Color>
        <Color x:Key="TextMuted">#6F8093</Color>
        <Color x:Key="BorderSoft">#D9E2EC</Color>
        <Color x:Key="PrimaryBlue">#1C9FDA</Color>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="16,14,16,24" Spacing="14">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                    <Label Text="Activity Log" FontSize="36" FontAttributes="Bold" TextColor="{StaticResource TextMain}" />
                    <Button Grid.Column="1"
                            Text="Filters"
                            Command="{Binding RefreshCommand}"
                            BackgroundColor="#EEF3FB"
                            TextColor="#4A5D76"
                            VerticalOptions="Center" />
                </Grid>

                <Border BackgroundColor="{StaticResource SurfaceCard}" Stroke="{StaticResource BorderSoft}" StrokeThickness="1" Padding="14,10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="14" />
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="10">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Label Text="Recent activity" FontSize="22" FontAttributes="Bold" TextColor="{StaticResource TextMain}" />
                            <Label Grid.Column="1" Text="{Binding EntriesSummary}" FontSize="12" TextColor="{StaticResource TextMuted}" VerticalTextAlignment="Center" />
                        </Grid>

                        <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
                            <Entry Placeholder="Type to filter rows..."
                                   Text="{Binding SearchText}" />
                            <Label Grid.Column="1"
                                   Text="Sort"
                                   TextColor="#60758C"
                                   FontAttributes="Bold"
                                   VerticalTextAlignment="Center" />
                            <Picker Grid.Column="2"
                                    ItemsSource="{Binding SortColumns}"
                                    SelectedItem="{Binding SelectedSortColumn}"
                                    WidthRequest="130" />
                            <Picker Grid.Column="3"
                                    ItemsSource="{Binding SortDirections}"
                                    SelectedItem="{Binding SelectedSortDirection}"
                                    WidthRequest="130" />
                        </Grid>

                        <Grid ColumnDefinitions="1.6*,1.2*,1*,1.2*,2.6*,Auto" BackgroundColor="#1488C6" Padding="10,8">
                            <Label Text="Time" FontSize="10" FontAttributes="Bold" TextColor="White" />
                            <Label Grid.Column="1" Text="User" FontSize="10" FontAttributes="Bold" TextColor="White" />
                            <Label Grid.Column="2" Text="Module" FontSize="10" FontAttributes="Bold" TextColor="White" />
                            <Label Grid.Column="3" Text="Action" FontSize="10" FontAttributes="Bold" TextColor="White" />
                            <Label Grid.Column="4" Text="Description" FontSize="10" FontAttributes="Bold" TextColor="White" />
                            <Label Grid.Column="5" Text="Details" FontSize="10" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" />
                        </Grid>

                        <CollectionView ItemsSource="{Binding Logs}" SelectionMode="None" HeightRequest="620">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="1.6*,1.2*,1*,1.2*,2.6*,Auto" Padding="10,9" ColumnSpacing="8" BackgroundColor="{Binding RowBackground}">
                                        <Label Text="{Binding TimeDisplay}" FontSize="12" TextColor="#223548" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />
                                        <Label Grid.Column="1" Text="{Binding UserDisplay}" FontSize="12" TextColor="#223548" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />
                                        <Label Grid.Column="2" Text="{Binding ModuleDisplay}" FontSize="12" TextColor="#223548" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />
                                        <Label Grid.Column="3" Text="{Binding ActionDisplay}" FontSize="12" TextColor="#223548" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />
                                        <Label Grid.Column="4" Text="{Binding DescriptionDisplay}" FontSize="12" TextColor="#41556D" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />
                                        <Button Grid.Column="5"
                                                Text="View"
                                                WidthRequest="72"
                                                HeightRequest="30"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.OpenDetailsCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="#EEF3FB"
                                                TextColor="#2D4560"
                                                FontAttributes="Bold"
                                                FontSize="12"
                                                Padding="8,4"
                                                HorizontalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="8">
                            <Label Text="{Binding ResultSummary}" FontSize="12" TextColor="{StaticResource TextMuted}" VerticalTextAlignment="Center" />
                            <Button Grid.Column="1"
                                    Text="Previous"
                                    Command="{Binding PreviousPageCommand}"
                                    IsEnabled="{Binding CanGoPreviousPage}"
                                    BackgroundColor="#EEF3FB"
                                    TextColor="#41556D"
                                    FontAttributes="Bold" />
                            <Label Grid.Column="2"
                                   Text="{Binding PageSummary}"
                                   FontAttributes="Bold"
                                   TextColor="#32465D"
                                   VerticalTextAlignment="Center"
                                   Margin="8,0" />
                            <Button Grid.Column="3"
                                    Text="Next"
                                    Command="{Binding NextPageCommand}"
                                    IsEnabled="{Binding CanGoNextPage}"
                                    BackgroundColor="#EEF3FB"
                                    TextColor="#41556D"
                                    FontAttributes="Bold" />
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Label Text="{Binding StatusMessage}" FontSize="12" TextColor="{StaticResource TextMuted}" />
                <Label Text="{Binding ErrorMessage}" FontSize="12" TextColor="#C12424" IsVisible="{Binding HasErrors}" />
            </VerticalStackLayout>
        </ScrollView>

        <Grid IsVisible="{Binding IsDetailsVisible}"
              BackgroundColor="#7A000000"
              Padding="20">
            <Border MaximumWidthRequest="860"
                    BackgroundColor="#FFFFFF"
                    StrokeThickness="0"
                    Padding="16,14"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="16" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <Label Text="Activity details" FontSize="26" FontAttributes="Bold" TextColor="{StaticResource TextMain}" />
                        <Button Grid.Column="1"
                                Text="X"
                                Command="{Binding CloseDetailsCommand}"
                                BackgroundColor="#EEF3FB"
                                TextColor="#4A5D76"
                                WidthRequest="38" />
                    </Grid>

                    <Grid ColumnDefinitions="Auto,*,Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                        <Label Text="Performed by" FontSize="11" FontAttributes="Bold" TextColor="#6F8093" VerticalTextAlignment="Center" />
                        <Label Grid.Column="1" Text="{Binding DetailsPerformedBy}" FontSize="15" TextColor="#1F2A37" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />

                        <Label Grid.Column="2" Text="When" FontSize="11" FontAttributes="Bold" TextColor="#6F8093" VerticalTextAlignment="Center" />
                        <Label Grid.Column="3" Text="{Binding DetailsWhen}" FontSize="15" TextColor="#1F2A37" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />

                        <Label Grid.Row="1" Text="Module" FontSize="11" FontAttributes="Bold" TextColor="#6F8093" VerticalTextAlignment="Center" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding DetailsModule}" FontSize="15" TextColor="#1F2A37" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />

                        <Label Grid.Row="1" Grid.Column="2" Text="Action" FontSize="11" FontAttributes="Bold" TextColor="#6F8093" VerticalTextAlignment="Center" />
                        <Label Grid.Row="1" Grid.Column="3" Text="{Binding DetailsAction}" FontSize="15" TextColor="#1F2A37" VerticalTextAlignment="Center" LineBreakMode="TailTruncation" />
                    </Grid>

                    <Border BackgroundColor="#F7FAFF" Stroke="{StaticResource BorderSoft}" StrokeThickness="1" Padding="10,8">
                        <Border.StrokeShape><RoundRectangle CornerRadius="8" /></Border.StrokeShape>
                        <VerticalStackLayout Spacing="3">
                            <Label Text="SUMMARY" FontSize="10" FontAttributes="Bold" TextColor="#6F8093" />
                            <Label Text="{Binding DetailsSummary}" FontSize="13" TextColor="#1F2A37" />
                        </VerticalStackLayout>
                    </Border>

                    <Border BackgroundColor="#F7FAFF" Stroke="{StaticResource BorderSoft}" StrokeThickness="1" Padding="10,8">
                        <Border.StrokeShape><RoundRectangle CornerRadius="8" /></Border.StrokeShape>
                        <VerticalStackLayout Spacing="3">
                            <Label Text="TARGET" FontSize="10" FontAttributes="Bold" TextColor="#6F8093" />
                            <Label Text="{Binding DetailsTarget}" FontSize="13" TextColor="#1F2A37" />
                        </VerticalStackLayout>
                    </Border>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="METADATA" FontSize="11" FontAttributes="Bold" TextColor="#6F8093" />
                        <CollectionView ItemsSource="{Binding DetailMetadata}" SelectionMode="None" HeightRequest="210">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="#F7FAFF" Stroke="{StaticResource BorderSoft}" StrokeThickness="1" Padding="10,8" Margin="0,0,0,6">
                                        <Border.StrokeShape><RoundRectangle CornerRadius="8" /></Border.StrokeShape>
                                        <Grid ColumnDefinitions="1.3*,3*" ColumnSpacing="8">
                                            <Label Text="{Binding Key}" FontSize="10" FontAttributes="Bold" TextColor="#6F8093" />
                                            <Label Grid.Column="1" Text="{Binding Value}" FontSize="12" TextColor="#1F2A37" LineBreakMode="WordWrap" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>
