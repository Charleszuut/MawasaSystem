<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MawasaProject.Presentation.Views.Pages.AuditPage"
             Title="Audit">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Audit Logs" FontSize="24" FontAttributes="Bold" />
            <Button Text="Refresh" Command="{Binding RefreshCommand}" />
            <CollectionView ItemsSource="{Binding Logs}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8" Margin="0,4" BorderColor="#D1D5DB">
                            <VerticalStackLayout>
                                <Label Text="{Binding ActionType}" FontAttributes="Bold" />
                                <Label Text="{Binding EntityName}" />
                                <Label Text="{Binding TimestampUtc}" FontSize="12" TextColor="#6B7280" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
