<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MawasaProject.Presentation.Views.Pages.BillingPage"
             Title="Billing">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" MaximumWidthRequest="680" HorizontalOptions="Center">
            <Label Text="Create Bill" FontSize="24" FontAttributes="Bold" />
            <Entry Placeholder="Bill Number" Text="{Binding BillNumber}" />
            <Entry Placeholder="Customer Id (GUID)" Text="{Binding CustomerIdText}" />
            <Entry Placeholder="Amount" Keyboard="Numeric" Text="{Binding Amount}" />
            <DatePicker Date="{Binding DueDateUtc}" />
            <Button Text="Create Bill" Command="{Binding CreateBillCommand}" />
            <Label Text="{Binding ErrorMessage}" TextColor="#B91C1C" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
