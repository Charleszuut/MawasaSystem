<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MawasaProject.Presentation.Views.Pages.BackupPage"
             Title="Backup &amp; Restore">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" MaximumWidthRequest="780" HorizontalOptions="Center">
            <Label Text="Backup &amp; Restore" FontSize="24" FontAttributes="Bold" />
            <HorizontalStackLayout Spacing="8">
                <Button Text="Refresh" Command="{Binding RefreshCommand}" />
                <Button Text="Create Backup" Command="{Binding CreateBackupCommand}" />
                <Button Text="Validate Backup" Command="{Binding ValidateBackupCommand}" />
            </HorizontalStackLayout>

            <Entry Placeholder="Restore file path" Text="{Binding RestorePath}" />
            <Button Text="Restore Selected Backup"
                    Command="{Binding RestoreCommand}"
                    IsEnabled="{Binding CanRestore}"
                    BackgroundColor="#B91C1C"
                    TextColor="White" />
            <Label Text="{Binding ValidationSummary}" FontSize="12" TextColor="#6B7280" />

            <CollectionView ItemsSource="{Binding History}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedBackup, Mode=TwoWay}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="8" Margin="0,4" BorderColor="#D1D5DB">
                            <VerticalStackLayout>
                                <Label Text="{Binding FileName}" FontAttributes="Bold" />
                                <Label Text="{Binding FilePath}" FontSize="12" />
                                <Label Text="{Binding Version, StringFormat='Version: {0}'}" FontSize="12" TextColor="#6B7280" />
                                <Label Text="{Binding IsAutomatic, StringFormat='Automatic: {0}'}" FontSize="12" TextColor="#6B7280" />
                                <Label Text="{Binding IntegrityVerifiedAtUtc, StringFormat='Verified: {0:yyyy-MM-dd HH:mm:ss} UTC'}" FontSize="12" TextColor="#6B7280" />
                                <Label Text="{Binding CreatedAtUtc}" FontSize="12" TextColor="#6B7280" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
