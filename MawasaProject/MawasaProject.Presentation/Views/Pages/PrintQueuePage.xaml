<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MawasaProject.Presentation.Views.Pages.PrintQueuePage"
             Title="Print Queue">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10" MaximumWidthRequest="680" HorizontalOptions="Center">
            <Label Text="Print Queue" FontSize="24" FontAttributes="Bold" />
            <Button Text="Refresh" Command="{Binding RefreshCommand}" />
            <CollectionView ItemsSource="{Binding QueueItems}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
